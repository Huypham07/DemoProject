<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:padding="8dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <ImageView
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="50dp"
                    android:layout_height="50dp" android:id="@+id/iv"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/tv" android:textSize="18sp"
                    android:gravity="center|start" android:fontFamily="sans-serif-medium" android:textStyle="normal"
                    android:textColor="#442C2E"/>
        </LinearLayout>
        <TextView
                android:text="TextView"
                android:layout_width="50dp"
                android:layout_height="100dp" android:id="@+id/nt" android:layout_weight="1"
                android:gravity="right|top" android:fontFamily="sans-serif-medium" android:textStyle="bold"
                android:textSize="26sp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>