<?xml version="1.0" encoding="utf-8"?><!--Linear layout as the root layout-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".MainActivity"
              android:orientation="vertical"
              android:background="#FEDBD0">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/title"
                  android:text="This is a demo app for slide"
                  android:textSize="20dp"
                  android:textAlignment="gravity"
                  android:textStyle="bold"
                  android:fontFamily="sans-serif-condensed-medium"
                  android:layout_margin="16dp"
                  app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginBottom="16dp" android:textColor="#442C2E"/>
        <Button
                android:text="Add"
                android:layout_width="75dp"
                android:layout_height="50dp" android:id="@+id/button2"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"
                android:textColor="#442C2E" android:backgroundTint="#FFFBFA"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TabHost
            android:id="@+id/tabHost"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_main_screen">

                <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
                             android:id="@+id/tab1">
                    <include layout="@layout/content1"/>
                </FrameLayout>

                <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
                             android:id="@+id/tab2">
                    <include layout="@layout/content2"/>
                </FrameLayout>

                <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
                             android:id="@+id/tab3">
                    <include layout="@layout/content3"/>
                </FrameLayout>
            </FrameLayout>

            <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"/>
        </LinearLayout>
    </TabHost>
</LinearLayout>
