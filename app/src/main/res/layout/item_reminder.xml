<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:paddingStart="16dp" android:paddingEnd="16dp"
        android:paddingTop="8dp" android:paddingBottom="8dp"
        android:background="@drawable/round_rectangle"
        android:backgroundTint="#FAF8F8">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/titleitem" android:layout_weight="1"
                android:gravity="left" android:fontFamily="sans-serif-medium" android:textStyle="bold"
                android:textSize="26sp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/dateitem" android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" android:textStyle="normal"
                    android:textColor="#442C2E"/>
            <Space android:layout_width="30dp" android:layout_height="match_parent"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/timeitem" android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" android:textStyle="normal"
                    android:textColor="#442C2E"/>
        </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>